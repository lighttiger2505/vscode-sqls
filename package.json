{
  "name": "sqls",
  "description": "SQL Language Server Extension for Visual Studio Code",
  "author": "lighttiger2505",
  "license": "MIT",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/lighttiger2505/vscode-sqls"
  },
  "bugs": {
    "url": "https://github.com/lighttiger2505/vscode-sqls"
  },
  "publisher": "lighttiger2505",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.43.0"
  },
  "activationEvents": [
    "workspaceContains:**/*.sql",
    "onLanguage:sql"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "sqls",
      "properties": {
        "go.languageServerFlags": {
          "type": "array",
          "default": [],
          "description": "Flags like -trace and -log to be used while running the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd .."
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "mocha": "^10.2.0",
    "@types/node": "^12.12.0",
    "eslint": "^6.4.0",
    "@typescript-eslint/parser": "^2.3.0",
    "typescript": "^3.8.3"
  }
}
